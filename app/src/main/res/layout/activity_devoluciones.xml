<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"

    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"

    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.example.abril.prestapp.Devoluciones"

    android:background="#aaaaaa"> <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"

    android:weightSum="1" android:gravity="end" android:layout_height="400dp" >

    <ListView

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:id="@+id/listView"

        android:layout_alignParentTop="true"

        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true" android:gravity="center_horizontal" android:weightSum="1" android:background="#ffffff"/> </LinearLayout>

    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="50dp" android:weightSum="1" android:gravity="end"> <Button

        android:layout_width="96dp"

        android:layout_height="40dp"

        android:background="#aaaaaa"

        android:text="REGRESAR"

        android:textColor="#ffffff"

        android:padding="7dp"

        android:layout_margin="8dp"

        android:id="@+id/Regresar"

        android:onClick="regresar"

        android:layout_gravity="right" /> </LinearLayout>

</RelativeLayout>