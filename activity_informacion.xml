<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
   android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
   android:paddingRight="@dimen/activity_horizontal_margin"
   android:paddingTop="@dimen/activity_vertical_margin"
   android:paddingBottom="@dimen/activity_vertical_margin"
   tools:context="www.ittepic.edu.mx.prestaap.Informacion"
   android:background="#1A5AAF">
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:weightSum="1"
       android:background="#ffffff">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Prestataria:"
           android:textColor="#000000"
           android:id="@+id/textView7" />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/campo1"
           android:editable="true" />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Articulo prestado:"
           android:textColor="#000000"
           android:id="@+id/textView8" />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/campo2"
           android:enabled="false"
           android:editable="true" />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Categoria:"
           android:textColor="#000000"
           android:id="@+id/textView9" />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/campo3"
           android:editable="false"
           android:enabled="false" />
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="0.07">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Fecha de prestamo:"
               android:textColor="#000000"
               android:id="@+id/textView10"
               android:layout_weight="1" />
           <EditText
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:inputType="date"
               android:ems="10"
               android:id="@+id/campo4"
               android:layout_weight="1"
               android:editable="false"
               android:enabled="false" />
       </LinearLayout>
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="0.06">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="FECHA DE ENTREGA: "
               android:textColor="#000000"
               android:id="@+id/textView11"
               android:layout_weight="1" />
           <EditText
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:inputType="date"
               android:ems="10"
               android:id="@+id/campo5"
               android:layout_weight="1" />
       </LinearLayout>
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="124dp"
           android:layout_height="wrap_content">
           <CheckBox
               android:layout_width="188dp"
               android:layout_height="56dp"
               android:text="Entregado?"
               android:id="@+id/check"
               android:checked="false"
               android:textSize="17dp"
               android:textColor="#000000"/>
       </LinearLayout>
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="108dp"
           android:weightSum="1"
           android:layout_weight="0.11">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textAppearance="?android:attr/textAppearanceLarge"
               android:text="Aplicar Cambios?"
               android:textColor="#000000"
               android:id="@+id/textView12" />
<Button
 android:layout_width="123dp"
 android:layout_height="wrap_content"
 android:id="@+id/imageButton2"
 android:background="#2B76C1"
 android:text="Confirmar"
 android:textColor="#ffffff"
 android:onClick="modificar" />
      		 </LinearLayout>
   </LinearLayout>
</RelativeLayout>
